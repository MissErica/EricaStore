@model EricaStore.Models.CartModel
@{
    ViewBag.Title = "Index";
}



<h2>My Shopping Cart</h2>
<table class="table table-striped">
    <thead>
    <tr>
        <th>Product Name</th>
        <th>Quantity</th>
        <th></th>
        <th>Price</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Items)
    {
        <tr>
            <td>@item.Product.ProductName</td>
            <td>@item.Quantity</td>
            <td><button disabled class="btn btn-default">Remove</button></td>
            <td>@item.Product.Price.ToString("C")</td>
        </tr>
    }
    </tbody>
    <tfoot>
    <tr>
        <th colspan="3">Subtotal</th>
        <th>@Model.Subtotal.ToString()</th>
    </tr>.
    </tfoot>
</table>

@Html.ActionLink("Keep Shopping", "Index", "Products", null, new { @class ="btn btn-primary"})
@Html.ActionLink("Checkout", "Index", "Checkout", null, new { @class = "btn btn-primary" })
