            <button type="button" class="btn btn-success btn-lg" onclick="location.href='@Url.Action("Register", "Account")';return false;">Register</button>

        </div>
        <div class="col-md-6">
            <img id="step1" src="~/Content/Images/cherry2.jpeg" />
        </div>

    </div>

    <div class="row" id="rowheight">
        <div class="col-md-6">
            <img id="step1" src="~/Content/Images/apple3.jpeg" />
        </div>
        <div class="col-md-6">
            <h1 style="font-size:48px">Step 3</h1>
            <p style="font-size:24px">
                Choose your juice
            </p>
            <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#deliverymodal">SEE SAMPLE JUICE MENU</button>

            <button type="button" class="btn btn-success btn-lg" onclick="location.href='@Url.Action("Register", "Account")';return false;">Register</button>
        </div>
    </div>
</div>






