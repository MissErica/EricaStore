


@{
    ViewBag.Title = "Home Page";
}



<div class="hero-div">
    <div class="container" style="margin:0px">
        <div class="row">
            <div class="col-md-6" id="left-div-text">
                <br />
                <div class="animated pulse">

                    <p style="font-size:75px;"> Fresh Start Juice Co.   </p>

                    <p>Certified organic healthy </p>
                    <p style="font-size:60px"> juices & smoothies </p>
                    <p>delivered direct to your door. </p>
                </div>
                    <div class= "animated rollIn">
                        <p style="font-size:60px" class="area">Daily. </p>
                    
                </div>
            </div>

            <div class="col-md-6 right-text">
                <img src="~/Content/Images/trygrapefruit.jpg" style="height:585px;" />
            </div>
        </div>
    </div>
</div>


<div class="container">
    <div  class="wow slideInUp" >

        <h1 style="text-align:center; font-size:75px;">How it Works <i class="fa fa-cogs" aria-hidden="true"></i></h1>
    </div>
    <br />
    <br />

    <div class="row" id="rowheight">
        <div class="col-md-6">
            <img id="step1" src="~/Content/Images/newbanana1.jpg" />
        </div>
        <div class="col-md-6 id=" step1text"">
            <h1 style="font-size:48px" class="wow flipInY">Step 1</h1>
            <p style="font-size:24px">
                See if we deliver to your area, then register for a free account
            </p>
            <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#deliverymodal">Delivery Area</button>

            <button type="button" class="btn btn-success btn-lg" onclick="location.href='@Url.Action("Register", "Account")';return false;">Register</button>

        </div>
    </div>


    <div class="row" id="rowheight">
        <div class="col-md-6">
            <h1 style="font-size:48px" class="wow flipInY">Step 2</h1>
            <p style="font-size:24px">
                Pick your membership level
            </p>
            <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#pricingmodal">Memberships/Pricing</button>

            <button type="button" class="btn btn-success btn-lg" data-toggle="modal" data-target="#step2infomodal">More info </button>

        </div>
        <div class="col-md-6">
            <img id="step1" src="~/Content/Images/newcherry2.jpg" />
        </div>

    </div>

    <div class="row" id="rowheight">
        <div class="col-md-6">
            <img id="step1" src="~/Content/Images/newapple3.jpg" />
        </div>
        <div class="col-md-6">
            <h1 style="font-size:48px" class="wow flipInY">Step 3</h1>
            <p style="font-size:24px">
                Choose your juice and checkout!
            </p>
            <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#juicemenumodal">SEE SAMPLE JUICE MENU</button>

            <button type="button" class="btn btn-success btn-lg" data-toggle="modal" data-target="#aboutjuicemodal">Our juice philosophy</button>
        </div>
    </div>
</div>
<br />
<br />

<div>

    <h1 style="text-align:center; font-size:70px" class="wow slideInLeft"> Get ready....super fresh juice coming your way!</h1>
</div>


